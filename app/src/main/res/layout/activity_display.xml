<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firebase Reailtime Database data insert"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prog"/>
        <EditText
            android:hint="Enter your Name"
            android:background="@drawable/edittextbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fname"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:hint="Enter your Department"
            android:background="@drawable/edittextbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/depName"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:hint="Enter your Batch"
            android:background="@drawable/edittextbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/batch"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:hint="Enter your student ID number"
            android:background="@drawable/edittextbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/idNumber"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:hint="Enter your section"
            android:background="@drawable/edittextbackgroud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/section"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:layout_gravity="center"
            android:id="@+id/realBTN"/>


    </LinearLayout>


</LinearLayout>